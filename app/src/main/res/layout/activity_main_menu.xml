<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activitypackage.MainMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:id="@+id/iconImage"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.69"
            android:src="@drawable/cook_male" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cookbook"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:forceHasOverlappingRendering="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:weightSum="1">

            <Button
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:text="New Recipe"
                android:id="@+id/new_recipe_btn"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.17" />

            <Button
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:text="Search Recipe"
                android:id="@+id/search_recipe_btn"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.16" />

            <Button
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:text="View Recipe List"
                android:id="@+id/view_recipe_btn"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.16" />

            <Button
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:text="Help"
                android:id="@+id/help_btn"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
